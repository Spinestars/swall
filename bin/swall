#!/usr/bin/env python
#coding:utf-8

__author__ = 'lufeng4828@163.com'

import os
import sys

if "swall" not in os.environ.get("PYTHONPATH",""):
    sys.stderr.write(
        "swall is not in PYTHONPATH env,please set, for example:\nexport PYTHONPATH=/data/swall:$PYTHONPATH\n")
    sys.stderr.flush()
    sys.exit(1)

from swall.parser import SwallAgent, Swall

reload(sys)
sys.setdefaultencoding('utf-8')


def swall_agent():
    """
    manage the swall agent
    """
    agent = SwallAgent()
    agent.main()


if __name__ == "__main__":
    swall = Swall()
    swall.main()
